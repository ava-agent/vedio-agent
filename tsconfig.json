{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": ".vercel/output",
    "rootDir": ".",
    "types": ["@vercel/node"],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "docs"]
}
